<Application x:Class="Supermarket.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:Supermarket.ViewModel"
             xmlns:view="clr-namespace:Supermarket.View">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModel:LogInViewModel}">
            <view:LogInView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:AdminViewModel}">
            <view:AdminView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:CashierViewModel}">
            <view:CashierView/>
        </DataTemplate>
        
    </Application.Resources>
</Application>
